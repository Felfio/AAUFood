<% day = day % 7 %>
<div class="weekday-container">
    <div class="row">
        <div class="col-xl-4 col-xl-offset-4 weekday-header">
            <span class="weekday">
                <span class="nav-icon left top pull-left">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                </span>
                <%= weekDayName(day) %>
                <span class="nav-icon right top pull-right">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-lg-6 col-md-12">
            <%- include('menu-list', {restaurantName: 'La Pasta', menu: lapasta ? lapasta[day] : null}) %>
        </div>
    </div>
</div>
